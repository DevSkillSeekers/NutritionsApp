<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NutritionsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/progress_color</item>
        <item name="colorPrimaryVariant">@color/progress_color</item>
        <item name="colorOnPrimary">@color/progress_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/progress_color</item>
        <item name="colorSecondaryVariant">@color/progress_color</item>
        <item name="colorOnSecondary">@color/progress_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
    <!--Here I Started-->
    <style name="cardViewInHome" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#40FFD858</item>
        <item name="cardCornerRadius">@dimen/corner_radius_12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">@dimen/default_padding</item>
    </style>

    <style name="progress">
        <item name="indicatorColor">#FFCB21</item>
        <item name="trackColor">@color/white</item>
    </style>

    <style name="cardView" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">#40FFD858</item>
        <item name="backgroundTint">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/light_gray</item>
    </style>

    <style name="bgInBMi">
        <item name="backgroundColor">#40FFD858</item>
    </style>

    <!--Diet Fragment-->

    <style name="bgdiet" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#40FFD858</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="titleTextInDiet">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/medium_text_size_18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bodyTextInDiet">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/large_body_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="alpha">.4</item>
    </style>
    <!--The End-->
    <style name="chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipStrokeColor">@color/light_gray</item>
        <item name="chipSurfaceColor">@color/yello_light</item>
        <item name="chipBackgroundColor">@color/bg_chip_state_list_night</item>
        <item name="android:textColor">@color/chip_text_night</item>
        <item name="checkedIconTint">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.NutritionsApp</item>
    </style>

    <style name="titleText">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/medium_text_size_18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="subTitle">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/large_body_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="alpha">.4</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/white</item>
    </style>

    <style name="subBodyText">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/medium_body_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="alpha">.4</item>
    </style>

    <style name="bodyText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/large_body_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="alpha">.4</item>
    </style>

