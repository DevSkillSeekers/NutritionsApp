    <style name="bottom_nav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">@color/bottom_nav_bg_night</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemRippleColor">@color/yello_light</item>
