<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NutritionsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yello_heavy</item>
        <item name="colorPrimaryVariant">@color/yello_heavy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yello_light</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipStrokeColor">@color/light_gray</item>
        <item name="chipSurfaceColor">@color/yello_light</item>
        <item name="chipBackgroundColor">@color/bg_chip_state_list</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.NutritionsApp</item>
    </style>

    <style name="titleText">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/medium_text_size_18sp</item>
    </style>

    <style name="subTitle">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/large_body_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="alpha">.4</item>
    </style>

    <style name="subBodyText">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/medium_body_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="alpha">.4</item>
    </style>

    <style name="bodyText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/large_body_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="alpha">.4</item>
    </style>

    <style name="cardView" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/light_gray</item>
    </style>

    <style name="cardViewWithBackground" parent="cardView">
        <item name="cardBackgroundColor">@color/lightGreenTheme</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title" />


