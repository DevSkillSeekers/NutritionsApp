<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_applogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition App"
        style="@style/bodyText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_img"
        android:layout_marginVertical="@dimen/default_margin"
        android:textSize="24sp"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/login_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        android:elevation="0dp"
        app:strokeColor="@color/login_card_stroke"
        app:cardBackgroundColor="@color/login_card_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        android:layout_marginHorizontal="@dimen/large_margin"
        android:layout_marginTop="@dimen/large_margin">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/create_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginVertical="@dimen/default_margin"
                style="@style/bodyText"
                android:textColor="@color/login_card_text"
                android:textSize="18sp"/>
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/login_card_stroke"
                android:layout_marginTop="@dimen/default_margin"
                app:layout_constraintTop_toBottomOf="@id/create_text"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_name"
                style="@style/stroke_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/name_label"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                android:layout_marginTop="@dimen/default_margin"
                app:endIconMode="clear_text"
                app:boxBackgroundMode="outline"
                app:placeholderTextColor="@color/yellow_medium"
                app:counterOverflowTextColor="@color/yellow_medium"
                app:counterTextColor="@color/yello_heavy"
                app:helperTextTextColor="@color/yello_heavy"
                app:helperTextTextAppearance="@color/yello_heavy"
                app:suffixTextColor="@color/yello_heavy"
                app:hintTextAppearance="@color/yello_heavy"
                app:hintTextColor="@color/yello_heavy"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/large_margin"
                app:errorEnabled="true">
                <!--    TextInputEditText weight-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLength="40" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/age"
                style="@style/stroke_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/age"
                app:counterEnabled="true"
                app:counterMaxLength="3"
                android:layout_marginTop="@dimen/small_margin"
                app:endIconMode="clear_text"
                app:helperTextEnabled="true"
                app:boxBackgroundMode="outline"
                app:placeholderTextColor="@color/yellow_medium"
                app:counterOverflowTextColor="@color/yellow_medium"
                app:counterTextColor="@color/yello_heavy"
                app:helperTextTextColor="@color/yello_heavy"
                app:helperTextTextAppearance="@color/yello_heavy"
                app:suffixTextColor="@color/yello_heavy"
                app:hintTextAppearance="@color/yello_heavy"
                app:hintTextColor="@color/yello_heavy"
                app:layout_constraintTop_toBottomOf="@id/user_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/default_margin"
                app:errorEnabled="true">
                <!--    TextInputEditText weight-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/age_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="3" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/height"
                style="@style/stroke_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/user_height"
                app:counterEnabled="true"
                app:counterMaxLength="3"
                android:layout_marginTop="@dimen/small_margin"
                app:endIconMode="clear_text"
                app:helperTextEnabled="true"
                app:boxBackgroundMode="outline"
                app:placeholderTextColor="@color/yellow_medium"
                app:counterOverflowTextColor="@color/yellow_medium"
                app:counterTextColor="@color/yello_heavy"
                app:helperTextTextColor="@color/yello_heavy"
                app:helperTextTextAppearance="@color/yello_heavy"
                app:suffixTextColor="@color/yello_heavy"
                app:hintTextAppearance="@color/yello_heavy"
                app:hintTextColor="@color/yello_heavy"
                app:layout_constraintTop_toBottomOf="@id/age"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/default_margin"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/height_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLength="5" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/weight"
                style="@style/stroke_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/user_weight"
                app:counterEnabled="true"
                app:counterMaxLength="3"
                android:layout_marginTop="@dimen/small_margin"
                app:endIconMode="clear_text"
                app:helperTextEnabled="true"
                app:boxBackgroundMode="outline"
                app:placeholderTextColor="@color/yellow_medium"
                app:counterOverflowTextColor="@color/yellow_medium"
                app:counterTextColor="@color/yello_heavy"
                app:helperTextTextColor="@color/yello_heavy"
                app:helperTextTextAppearance="@color/yello_heavy"
                app:suffixTextColor="@color/yello_heavy"
                app:hintTextAppearance="@color/yello_heavy"
                app:hintTextColor="@color/yello_heavy"
                app:layout_constraintTop_toBottomOf="@id/height"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/default_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/default_margin"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/weight_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLength="5"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:cornerRadius="@dimen/corner_radius_100dp"
        app:layout_constraintStart_toStartOf="@id/login_card"
        app:layout_constraintEnd_toEndOf="@id/login_card"
        app:layout_constraintTop_toBottomOf="@id/login_card"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:text="Register Now"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:backgroundTint="@color/yello_heavy"/>
</androidx.constraintlayout.widget.ConstraintLayout>