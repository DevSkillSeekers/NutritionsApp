<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin"
    android:background="@color/white"
    tools:context=".ui.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/darkGreenTheme"
        app:cardCornerRadius="@dimen/corner_radius_12dp"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/default_padding"
        app:layout_constraintBottom_toBottomOf="@+id/cardGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/circular_shape"
                android:indeterminate="false"
                android:max="100"
                android:minHeight="50dp"
                android:progress="20"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:rotation="-90"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/centerGuide"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining"
                style="@style/subTitle"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/progressBar"
                app:layout_constraintEnd_toEndOf="@id/progressBar"
                app:layout_constraintBottom_toTopOf="@id/totalCaloriesDayTv"/>

            <TextView
                android:id="@+id/totalCaloriesDayTv"
                style="@style/bodyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/progressBar"
                app:layout_constraintEnd_toEndOf="@+id/progressBar"
                app:layout_constraintStart_toStartOf="@+id/progressBar"
                app:layout_constraintTop_toTopOf="@+id/progressBar" />

            <TextView
                android:id="@+id/kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/subBodyText"
                android:text="Kcal"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/progressBar"
                app:layout_constraintEnd_toEndOf="@id/progressBar"
                app:layout_constraintTop_toBottomOf="@id/totalCaloriesDayTv"/>

            <TextView
                android:id="@+id/dietType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard Diet"
                style="@style/subTitle"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/centerGuide"
                app:layout_constraintBottom_toTopOf="@id/carbsTv"/>

            <TextView
                android:id="@+id/carbsTv"
                style="@style/bodyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carbs"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/centerGuide"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/large_margin"/>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/carbProgressBar"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginEnd="@dimen/small_margin"
                android:progress="10"

                app:indicatorColor="@color/splash_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/centerGuide"
                app:layout_constraintTop_toBottomOf="@+id/carbsTv"
                app:trackColor="@color/chip_teal" />

            <TextView
                android:id="@+id/trackCarb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/subBodyText"
                android:textColor="@color/white"
                android:text="300g"
                app:layout_constraintTop_toBottomOf="@id/carbProgressBar"
                app:layout_constraintStart_toStartOf="@id/centerGuide"/>

            <TextView
                android:id="@+id/proteinsTv"
                style="@style/bodyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/protein"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/centerGuide" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/proteinsProgressBar"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginEnd="@dimen/small_margin"
                android:progress="10"
                app:indicatorColor="@color/splash_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/centerGuide"
                app:layout_constraintTop_toBottomOf="@+id/proteinsTv"
                app:trackColor="@color/chip_teal" />

            <TextView
                android:id="@+id/trackProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/subBodyText"
                android:textColor="@color/white"
                android:text="65g"
                app:layout_constraintTop_toBottomOf="@id/proteinsProgressBar"
                app:layout_constraintStart_toStartOf="@id/centerGuide"/>

            <TextView
                android:id="@+id/fatTv"
                style="@style/bodyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fat"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/centerGuide"
                app:layout_constraintBottom_toTopOf="@id/fatProgressBar"/>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/fatProgressBar"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginEnd="@dimen/small_margin"
                android:progress="10"
                app:indicatorColor="@color/splash_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/centerGuide"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/large_margin"
                app:trackColor="@color/chip_teal" />

            <TextView
                android:id="@+id/trackFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/subBodyText"
                android:textColor="@color/white"
                android:text="65g"
                app:layout_constraintTop_toBottomOf="@id/fatProgressBar"
                app:layout_constraintStart_toStartOf="@id/centerGuide"
                android:layout_marginBottom="@dimen/large_margin"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/centerGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/mealChipGroup"
        style="@style/Widget.Material3.ChipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipSpacing="@dimen/default_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardGuide"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/breakfastChip"
            style="@style/chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/breakfast"
            app:layout_constraintEnd_toStartOf="@+id/lunchChip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardGuide"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <com.google.android.material.chip.Chip
            android:id="@+id/lunchChip"
            style="@style/chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lunch"
            app:layout_constraintEnd_toStartOf="@+id/dinnerChip"
            app:layout_constraintStart_toEndOf="@+id/breakfastChip"
            app:layout_constraintTop_toBottomOf="@+id/cardGuide" />

        <com.google.android.material.chip.Chip
            android:id="@+id/dinnerChip"
            style="@style/chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lunchChip"
            app:layout_constraintTop_toBottomOf="@+id/cardGuide" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/healthyRecipesTv"
        style="@style/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/healthy_recipes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mealChipGroup" />

    <include
        android:id="@+id/recipes"
        layout="@layout/healthy_food"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthyRecipesTv" />


    <TextView
        android:id="@+id/mealTv"
        style="@style/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/breakfast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipes" />

    <TextView
        android:id="@+id/seeAllTv"
        style="@style/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/small_padding"
        android:text="@string/see_all"
        app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintBaseline_toBaselineOf="@+id/mealTv"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        app:cardBackgroundColor="@color/lightGreenTheme"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mealTv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/light_gray">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding">

            <include
                android:id="@+id/meal1"
                layout="@layout/item_meal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/meal2"
                layout="@layout/item_meal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/meal1" />

            <TextView
                android:id="@+id/noItemTv"
                style="@style/subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:gravity="center"
                android:text="@string/empty_meal_list"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/totalCaloriesTv"
                style="@style/subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/default_padding"
                android:text="@string/total_calories"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meal2" />

            <TextView
                android:id="@+id/totalCaloriesAmountTv"
                style="@style/bodyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/totalCaloriesTv"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="210dp" />

</androidx.constraintlayout.widget.ConstraintLayout>