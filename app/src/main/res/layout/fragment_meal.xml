<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toEndOf="@id/lVGL"
        app:layout_constraintTop_toTopOf="@id/tHGL"/>

    <TextView
        android:id="@+id/mealTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:textColor="@color/primaryBlack"
        android:textSize="22sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/arrow_back"
        app:layout_constraintTop_toTopOf="@id/tHGL"/>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/mealItem1Box"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:background="#FAFDFC"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/lVGL"
        app:layout_constraintEnd_toEndOf="@id/rVGL"
        app:layout_constraintTop_toBottomOf="@id/mealTitle"
        app:strokeWidth="1dp" app:strokeColor="#DAE4E5"
        app:shapeAppearanceOverlay="@style/itemRounded" />

    <TextView
        android:id="@+id/mealItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ¥š"
        android:textColor="@color/primaryBlack"
        android:textSize="28sp"
        android:background="@drawable/item_style"
        android:padding="21dp"
        app:layout_constraintStart_toStartOf="@id/mealItem1Box"
        app:layout_constraintTop_toTopOf="@id/mealItem1Box"/>

    <TextView
        android:id="@+id/mealItem1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eggs"
        android:textColor="@color/primaryBlack"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@id/mealItem1"
        app:layout_constraintTop_toTopOf="@id/mealItem1Box"/>

    <TextView
        android:id="@+id/mealItem1Calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 cal"
        android:textColor="@color/primaryBlack"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="@id/mealItem1Name"
        app:layout_constraintTop_toTopOf="@id/mealItem1Name"/>

    <ImageView
        android:id="@+id/deleteItem"
        android:layout_width="25dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="360dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintStart_toEndOf="@id/mealItem1Name"
        app:layout_constraintTop_toTopOf="@id/mealItem1Name"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lVGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rVGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tHGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="38dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>